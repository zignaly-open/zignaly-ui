{
  "name": "zignal-ui",
  "version": "0.0.1",
  "description": "A library of interface resources designed by Zignaly.",
  "main": "index.js",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "prebuild:storybook": "npm run test:generate-output",
    "build:storybook": "build-storybook -c .storybook -o build/",
    "test:generate-output": "jest --json --outputFile=.jest-test-results.json || true",
    "test": "jest -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zignaly-open/react-component-library"
  },
  "keywords": [],
  "author": "Zignaly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zignaly-open/react-component-library/issues"
  },
  "homepage": "https://github.com/zignaly-open/react-component-library#readme",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-syntax-jsx": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@storybook/addon-actions": "^6.4.3",
    "@storybook/addon-essentials": "^6.4.3",
    "@storybook/addon-jest": "^6.4.3",
    "@storybook/addon-links": "^6.4.3",
    "@storybook/addon-options": "^5.3.21",
    "@storybook/react": "^6.4.3",
    "@testing-library/jest-dom": "^5.15.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "babel-loader": "^8.2.3",
    "enzyme": "^3.11.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-storybook": "^0.5.1",
    "jest": "^27.3.1",
    "puppeteer": "^11.0.0",
    "storybook-addon-styled-component-theme": "^2.0.0",
    "storybook-dark-mode": "^1.0.8",
    "storybook-figma": "^0.1.2"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@metamask/jazzicon": "^2.0.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "ethers": "^5.5.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-number-format": "^4.7.3",
    "react-spring": "^9.3.0",
    "react-test-renderer": "^17.0.2",
    "react-use": "^17.3.1",
    "styled-components": "^5.3.3"
  },
  "jest": {
    "rootDir": ".",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^@root(.*)$": "<rootDir>/src$1",
      "^@assets(.*)$": "<rootDir>/src/assets$1",
      "^@hooks(.*)$": "<rootDir>/src/hooks$1",
      "^@components(.*)$": "<rootDir>/src/components$1",
      "^@utils(.*)$": "<rootDir>/src/utils$1",
      "^@types(.*)$": "<rootDir>/src/types$1"
    }
  }
}
